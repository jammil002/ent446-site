 <style>
	 section {
		 background: radial-gradient(circle at center, black, blue 200%);
		 transition: background 0.5s;
	 }
 </style>
 
 <script>
	 const sections = document.querySelectorAll("section");
	 if (sections) {
		 document.addEventListener('mousemove', function(e) {
			 let x = e.clientX / window.innerWidth * 100;
			 let y = e.clientY / window.innerHeight * 100;
			 // Increase the size of the radial gradient
			 sections.forEach((s) => {
				 s.style.background = `radial-gradient(circle at ${x}% ${y}%, black, blue 200%)`;
			 })		
		 });
	 }
 </script>
 